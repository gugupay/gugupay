---
import { pageDescription } from "@utils/configs";
import MainLayout from "@layouts/main.astro";
---

<MainLayout
  title="Gugupay | Home"
  description={pageDescription}
  isWallet={false}
>
  <section class="w-full">
    <div
      class="mx-auto grid px-4 py-8 lg:grid-cols-12 lg:gap-8 lg:py-16 xl:gap-0"
    >
      <div class="mr-auto place-self-center lg:col-span-7">
        <h1
          class="mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight md:text-5xl xl:text-6xl"
        >
          Crypto Payment Solution
        </h1>
        <p class="font-lightlg:mb-8 mb-6 max-w-2xl md:text-lg lg:text-xl">
          Gugupay makes crypto payment simple, secure, decentralized, and
          possible for all merchants.
        </p>
        <a
          href="/docs/learn/what-is-gugupay"
          class="mr-3 inline-flex items-center justify-center rounded-lg px-5 py-3 text-center text-base font-medium focus:ring-4"
        >
          Get started
          <svg
            class="-mr-1 ml-2 h-5 w-5"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path></svg
          >
        </a>
        <a
          href="/app"
          class="inline-flex items-center justify-center rounded-lg border px-5 py-3 text-center text-base font-medium focus:ring-4"
        >
          Go To Dashboard
        </a>
      </div>
      <div class="flex lg:col-span-5 lg:mt-0">
        <div class="mockup-phone mt-10 lg:mt-0">
          <div class="camera"></div>
          <div class="display">
            <div class="artboard artboard-demo phone-1">Hi.</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
