---
import { githubLink } from "@utils/configs";
import Github from "@icons/Github.astro";
---

<footer class="p-4 sm:p-6">
  <div class="container mx-auto">
    <div class="sm:flex sm:items-center sm:justify-between">
      <p class="text-center text-sm">
        © 2024 <a href="https://gugupay.io" class="hover:underline"
          >Gugupay™</a
        >. All Rights Reserved.
      </p>
      <div class="mt-4 flex justify-center space-x-4 sm:mt-0">
        <a
          aria-label="Github"
          target="_blank"
          href={githubLink}
          rel="noopener"
          class="drawer-button normal-case"
        >
          <Github />
        </a>
      </div>
    </div>
  </div>
</footer>
